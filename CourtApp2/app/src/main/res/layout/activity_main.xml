<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jeevakarthik.courtapp.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="120dp"

            android:layout_marginLeft="10dp"
            android:rotation="90"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="374dp"

            android:layout_gravity="left|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team A"
                android:layout_marginTop="16dp"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:id="@+id/TeamA"
                android:layout_marginTop="16dp"
                android:editable="false"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginTop="24dp"

                android:onClick="threePoints"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:id="@+id/twoPoints"
                android:layout_marginTop="8dp"
                android:onClick="twoPoints"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:id="@+id/button3"
                android:layout_marginTop="8dp"
                android:onClick="freeThrow"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="183dp"
            android:layout_height="371dp"
            android:layout_gravity="right|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team B"
                android:layout_marginTop="16dp"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:id="@+id/TeamB"
                android:layout_marginTop="16dp"
                android:editable="false"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:layout_marginTop="24dp"
              android:onClick="threePoints2"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:id="@+id/button5"
                android:layout_marginTop="8dp"
                android:onClick="twoPoints2"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="free throw"
                android:layout_marginTop="8dp"
                android:onClick="freeThrow2"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:onClick="resetButton"
            android:id="@+id/button7"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>
</RelativeLayout>
